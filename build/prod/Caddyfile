{
    servers {
        trusted_proxies static 172.16.0.0/16
    }
}

:8080 {
    redir /api /api/
    route /api/* {
    	rewrite * /index.php?{query}
        php_fastcgi 127.0.0.1:9000 {
            root /var/app/www/backend/public
            try_files /index.php
        }
    }

    reverse_proxy localhost:3000

    log {
        output stdout
        level ERROR
    }
}
